@model IEnumerable<CardMatchLibrary.Models.ReleaseModel>

@{
    ViewBag.Title = "Display Matched Lands";
    Layout = "~/Views/Shared/_Display.cshtml";
}

<h2>Display Matched Lands</h2>
@if (Model.Count() > 0){
  <style>
  .card {
    height: 300px;
  }
  </style>

  <div>
    @foreach (var m in Model.OrderBy(m => m.canonicalImageId))
    {
      string imageSrc = m.GetPath();
      string link = "./SelectLand?baseId=" + m.id;
      
      <a href="@link">
        <img class="card" src="@imageSrc">
      </a>
    }
  </div>
} else {
  <p>No Lands Have Matches</p>
}