@model IEnumerable<CardMatchLibrary.Models.ReleaseModel>

@{
    ViewBag.Title = "Detect Cutout Image";
    Layout = "~/Views/Shared/_Process.cshtml";
}

<h2>Detect Cutout Image</h2>
@if (Model.Count() > 0){
  <table>
    <thead>
      <tr>
        <th>Set Code</th>
        <th>Image File</th>
        <th>Card Number</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var m in Model.OrderBy(m => m.cardSetCode)
                              .ThenBy(m => m.imageFile)
                              .ThenBy(m => m.cardNumber))
      {
        <tr>
          <td>@m.cardSetCode</td>
          <td>@m.imageFile</td>
          <td>@m.cardNumber</td>
        </tr>
      }
    </tbody>
  </table>
} else {
  <p>All Cutout Images Created</p>
}