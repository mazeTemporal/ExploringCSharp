@model IEnumerable<GroceryList.Models.RecipeModel>

@{
  ViewBag.Title = "Recipes";
}

<h2>@ViewBag.Title: (@Html.ActionLink("Create New", "Create", "Recipe"))</h2>

<table>
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var recipe in Model)
    {
      <tr>
        <td>
          @Html.ActionLink(
            recipe.Name,
            "Show",
            "Recipe",
            new { name = recipe.Name },
            null
          )
        </td>
      </tr>
    }
  </tbody>
</table>