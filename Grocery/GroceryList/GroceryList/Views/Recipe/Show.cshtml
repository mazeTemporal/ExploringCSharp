@model GroceryList.Models.RecipeModel

@{
  ViewBag.Title = Model.Name;
}

<h2>@ViewBag.Title: (@Html.ActionLink("Edit Recipe", "Edit", "Recipe", new { @name = @Model.Name }, null))</h2>

<div>
  <div>
    @Html.ActionLink(
      "Instructions",
      "GetPDF",
      "Recipe",
      new { file = @Model.PDF },
      null
    )
  </div>
  <h3>Ingredients:</h3>
  <table>
    <thead>
      <tr>
        <th>@Html.DisplayNameFor(recipe => recipe.Ingredients[0].Name)</th>
        <th>@Html.DisplayNameFor(recipe => recipe.Ingredients[0].Amount)</th>
        <th>@Html.DisplayNameFor(recipe => recipe.Ingredients[0].Unit)</th>
      </tr>
    </thead>
    <tbody>
      @Html.DisplayFor(model => model.Ingredients)
    </tbody>
  </table>
</div>
